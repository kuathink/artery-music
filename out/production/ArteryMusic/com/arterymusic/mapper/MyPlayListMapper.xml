<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arterymusic.mapper.MyPlayListMapper">
	<!--查询我的歌单歌曲-->
	<select id="findAllSongs" resultType="MyPlayList">
		select * from arterymusic.my_play_list
	</select>
	<!--删除-->
	<delete id="deleteSong" parameterType="int">
		delete from my_play_list where id=#{id}
	</delete>
	<!--id查询-->
	<select id="findSongById" parameterType="int" resultType="MyPlayList">
		select * from my_play_list where id = #{id}
	</select>
	<!--添加-->
	<insert id="addSong" parameterType="MyPlayList">
		insert into my_play_list(songName, singer, album, duration)
		values (#{songName}, #{singer}, #{album}, #{duration})
	</insert>


</mapper>