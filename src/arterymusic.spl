from arterymusic.an_user;

# 使用数据库 artermusic
use arterymusic;
# 创建数据表 music_album
create table my_play_list
(
    id       int primary key auto_increment,
    songName varchar(30) not null,
    singer   varchar(30) not null,
    album    varchar(30) not null,
    duration varchar(30) not null
);
