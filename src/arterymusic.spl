# 创建数据库 arterymusic
create database arterymusic;
# 使用 arterymusic 数据库
use arterymusic;
# 创建数据表 an_user
create table an_user
(
    id       int(30) primary key AUTO_INCREMENT,
    account  varchar(30) not null,
    password varchar(30) not null,
    email    varchar(30) not null
);
# 向 user 表插入三条数据,注意：values中应使用单引号''。
